<?php
if ($_SERVER["REQUEST_METHOD"] === "POST") {
    // Hämta data från formuläret
    $namn = htmlspecialchars($_POST['namn']);
    $telefon = htmlspecialchars($_POST['telefon']);
    $email = htmlspecialchars($_POST['email']);
    $beskrivning = htmlspecialchars($_POST['beskrivning']);

    // E-postinställningar
    $till = "info@paketfarten.se"; // Mottagare
    $ämne = "Ny bokningsförfrågan från $namn";
    $meddelande = "
    Bokningsdetaljer:
    -----------------
    Namn: $namn
    Telefon: $telefon
    E-post: $email
    Beskrivning: 
    $beskrivning
    ";
    $headers = "Från: $email\r\n";

    // Skicka e-post
    if (mail($till, $ämne, $meddelande, $headers)) {
        echo "<h1>Tack för din bokning, $namn! Vi återkommer så snart som möjligt.</h1>";
    } else {
        echo "<h1>Ett fel uppstod vid skickandet av ditt meddelande. Försök igen senare.</h1>";
    }
} else {
    echo "<h1>Ogiltig begäran.</h1>";
}
?>